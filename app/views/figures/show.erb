<h1><%=@figure.name%></h1>

<%if !@figure.titles.empty?%>
<h2>Titles: </h2>
<%@figure.titles.each do |title|%>
  <p><%=title.name%></p>
<%end%>
<%end%>

<h2>Landmarks: </h2>
<%@figure.landmarks.each do |landmark|%>
  <p><%=landmark.name%></p>
<%end%>

<form action="/figures/<%=@figure.id%>/edit" method="GET">
  <input type="submit" value="Edit Figure">
</form>
